<BorderPane fx:id="borderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" nodeOrientation="LEFT_TO_RIGHT" prefWidth="760.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainScreenController">
   <center>
      <Pane fx:id="gamePool" maxHeight="560.0" maxWidth="560.0" prefHeight="560.0" prefWidth="560.0" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <VBox spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Label text="Host" />
                  <TextField fx:id="hostField" />
                  <Label fx:id="l" text="Port" />
                  <TextField fx:id="portField" focusTraversable="false" promptText="enter the port number" />
                  <Button fx:id="connectButton" mnemonicParsing="false" text="Connect" />
                  <Button fx:id="disconnectButton" mnemonicParsing="false" text="Disconect" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="50.0" top="20.0" />
         </padding>
      </VBox>
   </bottom>
   <left>
      <VBox id="vbox" alignment="CENTER" prefHeight="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="myTurn" text="Your Turn">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font></Label>
            <Ellipse fx:id="myElipse" fill="DODGERBLUE" radiusX="22.75" radiusY="18.2" stroke="BLACK" strokeType="INSIDE" strokeWidth="2.0" />
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </VBox>
   </left>
   <right>
      <VBox alignment="CENTER" maxWidth="110.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="oppTurn" prefHeight="21.0" prefWidth="108.0" text="Enemy Turn">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font></Label>
            <Ellipse fx:id="oppElipse" fill="DODGERBLUE" radiusX="22.75" radiusY="18.2" stroke="BLACK" strokeType="INSIDE" strokeWidth="2.0" />
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </VBox>
   </right>
   <top>
      <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#closeApplication" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
               <items>
                  <RadioMenuItem mnemonicParsing="false" onAction="#setClassic" selected="true" text="Classic">
                     <toggleGroup>
                        <ToggleGroup fx:id="styleGroup" />
                     </toggleGroup>
                  </RadioMenuItem>
                  <RadioMenuItem mnemonicParsing="false" onAction="#setModern" text="Modern" toggleGroup="$styleGroup" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <CheckMenuItem fx:id="alwaysOnTop" mnemonicParsing="false" onAction="#setOnTop" text="Always on top" />
               </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#about" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
